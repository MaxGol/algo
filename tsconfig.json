{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "lib": ["es6", "es2021", "DOM"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "rootDir": "./",
    "types": ["jest"],
    "outDir": "./dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules/", "test","dist"],
}